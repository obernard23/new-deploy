<!DOCTYPE html>
<html lang="en">
    <%-include('./partials/head.ejs')%>
    <%-include('./partials/inactive.ejs')%>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/Appraisal.css">
    <link rel="stylesheet" href="/main.css"/>
    <link rel="stylesheet" href="/feature.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title><%=name%></title>
</head>
<body>
    <nav class="navbar bg-black ">
        <div class="container-fluid">
            <span class="navbar-brand" onclick="history.back()" href="/" title="Back">
              <img 
              width="30"
              hegith="30"
              src="data:image/png;base64,">
             </span>
          
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item dropdown">
              <h5>
              <a class="nav-link breadcrumb-item active"
                    aria-current="page"
                    href="/"
                    role="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                    style="color: #fff !important"
                  ><%=item.firstName%> <%=item.lastName%> / Appraisal</a> 
              
              </h5>
            </li>
          </ul>
        </div>
      </nav>
   <article class="overflow-hidden bg-light p-3">
    <!-- oprations show here -->
    <div  class="flex flex-col border mx-10 m-7 shadow  container-fluid" >
      <!-- the main form div -->
      <h1 class="font-bold text-2xl appraisalH1"> <script>
        document.write(`KPI/${new Date().getFullYear()}/New`)
      </script></h1>
        <div class="flex justify-between p-5">
            <div class="flex flex-col gap-3 ">
              <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Title</span>
                <input type="text" class="form-control" placeholder="KPI/<%=new Date().getFullYear()%>/Q"  value='KPI/<%=new Date().getFullYear()%>/<%=Math.floor(Math.random()*12367)%>/Q' id="title"/>
              </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Appraisee</span>
                    <input type="hidden" name="" id="employeeId" readonly value="<%=item._id%>">
                    <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1" disabled value='<%=item.firstName%> <%=item.lastName%>'/>
                  </div>
                <!-- <input type="text" placeholder="Employee's name"  id="EmployeeName" style="width:570px;padding:10px;font-size: x-large;" required/> -->
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Manager</span>
                    <input type="text" class="form-control" placeholder="Username" aria-label="Username" disabled value='<%=item.Manager.firstName%> <%=item.Manager.lastName%>' aria-describedby="basic-addon1">
                  </div>
                  <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Job Role</span>
                    <input type="text" class="form-control" placeholder="Username" aria-label="Username" value="<%=item.jobTittle%>" disabled aria-describedby="basic-addon1">
                  </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Email</span>
                    <input type="text" class="form-control" placeholder="Username" aria-label="Username" disabled aria-describedby="basic-addon1" value="<%=item.Email%>">
                  </div>
                  <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Start Date</span>
                    <input type="date" class="form-control"  aria-label="Username" aria-describedby="basic-addon1">
                  </div>
            </div>
            <!-- for profile image -->
            <div style="width: 12rem;">
              <%if(item.image === ''){%>
                <img src=" https://cdn.pixabay.com/photo/2019/08/11/18/59/icon-4399701_640.png" alt="" srcset="">
                <%}else{%>
                  <img src="<%=item.image%>" class="card-img-top shadow-sm" width="60" height="60" alt="Photo" srcset="">
                <%}%>
            </div>
        </div>
        <div class="flex justify-center flex-col m-3 " >
            <h1 class="font-bold appraisalH1">Set KPI</h1>
        <!-- table format here -->
        <table>
            <thead>
            <!-- <th class=" border m-3">S/No</th> -->
            <th class="border">Perspective</th>
            <th class="border">Objectives</th>
            <th class="border">KPI weight</th>
            <th class=" border">Employee Score</th>
            <th class="border">Performance</th>
            <th class="border">Rating</th>
        </thead>
        <tbody id="tbody"></tbody>
        <form >
            <tbody id="toggle" class=" justify-between">
                <tr>
                    
                    <!-- Perspective -->
                    <td >
                        <div class="col-md-9">
                            <label for="Perspective" class="form-label"></label>
                            <select
                              class="form-select "
                              id="Perspective"
                              aria-describedby="validationServer04Feedback"
                              required
                              name="Perspective"
                            >
                            <option value="">Choose...</option>
                            <option value="Customer">Customer</option>
                            <option value="Finance">Finance</option>
                            <option value="Innovation">Innovation</option>
                            <option value="Learning and Growth">Learning and Growth</option>
                            </select>
                            </div>
                    </td>
                    <!-- Objectives -->
                    <td class="col-md-3">
                            <label for="validationCustom01" class="form-label"></label>
                            <textarea type="text"  name="Objectives" cols="90" rows="2" placeholder="Type a description" class="form-control" autocomplete="off" autocapitalize="on"  ></textarea>  
                    </td>
                    <!-- Measures -->
                    <td >
                        <div class="col-md-9">
                            <label for="Measures" class="form-label"></label>
                            <input
                            class="form-control"
                              id="Measures"
                              aria-describedby="validationServer04Feedback"
                              required
                              name="Measures"
                              type="number"
                              placeholder="Enter point for set KPI"
                            >
                            </div>
                    </td>

                    <!-- submit form button -->
                    <td>
                      <button class=" font-bold border rounded p-1" >+</button>
                  </td>
                    <!-- Target scoring -->
                    <!-- <td>
                      <div class="col-md-6">
                        <label for="" class="flex justify-center"></label>
                            <input type="number" name="score" placeholder="0" value="0" disabled class="form-control is-valid" required/>
                        
                      </div>
                    </td> -->
                    <!-- innovation -->
                    <!-- <td >
                      <div class="col-md-6">
                        <label for="" class="flex justify-center">
                            <input type="number" name="innovation" disabled placeholder="0" value="0" class="form-control is-valid" required/>
                        </label>
                      </div>
                    </td> -->
                </tr>
            </tbody>
        </table>
        </form>
        <div class="p-2 font-bold" style="font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;">
           <h3 id="Max">Max Score :0/100</h3><br>
           <h3>Employee Score:0</h3><br>
           <h3>Performance : 0</h3><br>
           <h3>General Rating: </h3><br>
        </div>
        <div>
          <button  id="submit"> Submit Apraisal</button>
        </div>
    </div>
        <!-- section 2 -->
        <div class=" flex flex-col gap-7 p-5">
            <h1 class="font-bold border appraisalH1">Commentary/Review</h1>
            <label for="" class="flex flex-col text-sm font-bold">
                Manager Remark: <input type="text" placeholder="Make a Review" readonly>
            </label>

            <label for="" class="flex flex-col text-sm font-bold">
                H.R Remark: <input type="text" placeholder="Make a Review" readonly>
            </label>

            <label for="" class="flex flex-col text-sm font-bold">
                M.D's Remark: <input type="text" placeholder="Make a Review" readonly>
            </label>

            <label for="" class="flex flex-col text-sm font-bold">
                Employee's comment: <input type="text" placeholder="Make a Review" readonly>
            </label>
          </div>
         
    </div>
  </article>
</div>
</body>
<script type="module"  src="/Appraisal.js"></script>
<script   src="/Erp.js"></script>
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</html>