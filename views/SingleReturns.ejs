<div id="" class="container p-3 flex items-center flex-col justify-center gap-3 shadow">
    <!-- Modal content -->
    <div class="content ">
        <div  class="row g-3 needs-validation" id="form">

            
              <div class="col-md-4">
                <label for="customer" class="form-label">STATUS</label>
                <h2 class="form-text"><%=SingleReturn.status.toUpperCase()%></h2>
              </div>
              
              <div class="col-md-4">
                <label for="remark" class="form-label"> STORE KEEPER  </label>
                <h5 class="form-text"><%=SingleReturn.storeKeeper.toUpperCase()%></h5>
                </div>

            <div class="col-md-4">
                <label for="date" class="form-label">RETURN DATE</label>
                <h5 class="form-text"><%=SingleReturn.ReturnDate%></h5>
            </div>

            <div class="col-md-4">
                <label for="date" class="form-label">See Details</label>
                <h5 class="form-text">
                    <a href="/api/v1/bill/<%=SingleReturn.BillId%>" class="link-offset-3-hover"><%=SingleReturn.billReferenceNo%></a>
                </h5>
            </div>

           <%if( SingleReturn.status.toUpperCase() !=='APPROVED' && user.role === 'Admin' || user.jobTittle === "CFO" ){%>
            <div class="col-md-4  ">
                <label for="InvoiceNo" class="form-label"> </label>
                  <button class="btn btn-success form-control" id="Approve" data-id="<%=user._id%>"> Authorize Return</button>
                  <input type="hidden" id="id" value="<%=SingleReturn._id%>" hidden disabled>
              </div>
            <%}%>
  
              <!-- <div class="col-md-4  ">
                  <label for="InvoiceNo" class="form-label"> </label>
                    <button class="btn btn-danger form-control" id="Reject" > Reject Request</button>
                </div> -->

            </div>
    </div>
    <%-include('./partials/footer.ejs')%>
</div>


 <!-- The Modal -->
 <div id="myModal" class="modal flex items-center flex-col justify-center gap-3 shadow">
    <!-- Modal content -->
      <div class="modal-body d-flex justify-content-center container">
        <form class="bg-light gap-3 p-3 rounded shadow  flex-column d-flex" id="opsCode" >
          <span title="close" onclick="document.getElementById('myModal').style='none'">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square-fill" viewBox="0 0 16 16">
              <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm3.354 4.646L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z"/>
            </svg>
          </span>
          <i>You're about to perform a sensitive operation</i>
          <input type="password" name="opsCode" id="opsCodes" class="form-control input-group has-validation" placeholder="Enter operational code" autocomplete="off">
          <button type="submit" class="btn btn-danger">Action</button>
        </form>
      </div>
    </div>
    <!-- ends here -->
</body>
<script>


    const Reject = document.getElementById('Reject')
    const Approve = document.getElementById('Approve')

    Approve.addEventListener('click', async() =>{
            document.getElementById('myModal').style.display = 'block';
    })

    //ops code form 
    const opsCodesForm = document.getElementById('opsCode')
      opsCodesForm.addEventListener('submit', async (e)=>{
        e.preventDefault()
        
        let opInput = opsCodesForm.opsCode.value
        let user = document.getElementById('Approve')
        let userId =user.dataset.id

        const request = await fetch(`/api/v1/users/${userId}/${opInput}`,{
          method:'GET',
          headers:{'Content-Type': 'application/json'}
        })
        document.getElementById('opsCode').innerText = 'Please Wait...'
        const response = await request.json()
        if(response.signature){
          const id = document.getElementById('id').value
            const request = await fetch(`/api/v1/SingleReturn/${id}`,{
            method:'PATCH',
            body:JSON.stringify({
              id:id,
            }),
            headers:{"content-type": "application/json"}
            })

            const response = await request.json()
            if(response.message){
              alert(response.message)
              location.reload()
            }else{
              alert(response.error)
              location.reload()
            }
        }else{
            alert('Invalid operation requested')
        };

    })
    
</script>
</html>