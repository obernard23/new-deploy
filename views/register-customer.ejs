    <link rel="stylesheet" href="/main.css"/>
<body>
      <nav class="navbar bg-black">
        <div class="container-fluid">
          <span class="navbar-brand" onclick="location.assign('/api/v1/Ecommerce/Customers')" title="Back">
            <img 
            width="30"
            hegith="30"
            src="data:image/png;base64,">
           </span>
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item dropdown">
  
                    <h5>
                      <a
                      class="nav-link breadcrumb-item active"
                      aria-current="page"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                      style="color: #fff !important"
                    >
                    Create-new customer
                    </a>
                    </h5>
                  
                  </li>
            </ul>
        </div>
      </nav>

    
        <!-- main display -->
        <div class="container shadow mt-2 bg-light">
             <!-- create product form -->
        <div class="flex justify-end  ">
            <!-- image upload div -->
                <input type="file" hidden id="files" name='image' multiple />
        </div>
    <form action=""  method="post" id='customerForm' class="p-2 "  >
        <input type="text" placeholder="customer Name" name="Name" style="width:570px;padding:10px;font-size: x-large;" required/>
        <div class="flex  gap-3 p-5 justify-around">
            <!-- cateory -->
            <div>
                <label  class="flex justify-between gap-7">
                 customer category
                 <select id="category" name="Categories">
                 <optgroup label="category">
                    <option disabled value="">Choose one</option>
                    <option selected value='Credit-Customer'>Credit Customer(CC)</option>
                    <!-- <option disabled value="Pay as Go">Pay as Go (B2B)</option> -->
                 </optgroup>
                </select>
             </label>
            </div>
            <!-- image -->
            <div>
                <div class="flex flex-col">
                    <label for="files" id="productImage" style="background-image: url( https://cdn.pixabay.com/photo/2019/08/11/18/59/icon-4399701_640.png);"></div>
                    <!-- display progress % for photo upload -->
                    <!-- <progress value="0" max="100" id="progress"></progress> -->
                    <input type="url" name="image" disabled id="imageLoader" class='hidden'>
                    </label>
                </div>
        </div>
        <div class="border-b flex font-bold">
            <div class="border p-2 subs" name="category" title="Double click to show section">customer information</div>
           
           
        </div>
        <!-- customer information -->
            <div class="flex flex-col gap-9 hidden border-b p-5" id="workInfo">
                <div class="col-md-4">
                <label class="flex gap-7"> </label>
                <input type="tel" name="contact" placeholder="Contact Person">

                </div>

                <div class="col-md-4">
                <label class="flex gap-7">Phone Number  </label>
                <input type="tel" required name="customer_tel" placeholder="customer Tel...">

                </div>

                <div class="col-md-4">
                <label  class="flex gap-7"> Registration Date </label>
                    <input type="date" class="form-control" name="DOB" placeholder="Date Of Bith">

                </div>

                <div class="col-md-4">
                <label class="flex gap-7"> Email Address </label>
                   <input type="email" name="email" required placeholder="Email :Example@xyz.com">
               
                </div>

                <div class="col-md-4">
                 <label class="flex gap-9 "> Address Location</label>
                    <input type="text" name="Address"placeholder='Branch Address'>
                </div>

                <div class="col-md-4">
                    <label for="salesPerson" class="form-label">Sales person</label>
                    <select name="salesPerson" id="salesPerson" class="form-select" required>
                        <option >Choose...</option>
                        <%employees.forEach(employe=>{%>
                       <option value="<%=employe._id%>"><%=employe.firstName%> <%=employe.lastName%></option>
                       <% })%>
                    </select>
                  </div>

                <div class="col-md-4">
                  <label for="Debt" class="flex flex-col gap-7">Opening Balance.</label>
                  <strong>NOTE:  <sub class="text-success">If your business is owing the customer, Kindly register the opening balance in NAGATIVE VALUES (-2000) else in debt register POSITIVE values (2000)</sub></strong>
                    <input type="number" value= 0 required placeholder="Enter Opening Balance" id="Debt" name="Debt">
                
                </div>
                
            </div>
           
        <button>Rgister New Customer</button>
    </form>
</div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment-with-locales.min.js" integrity="sha512-42PE0rd+wZ2hNXftlM78BSehIGzezNeQuzihiBCvUEB3CVxHvsShF86wBWwQORNxNINlBPuq7rG4WWhNiTVHFg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
